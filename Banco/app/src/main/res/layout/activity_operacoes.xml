<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/newBlack">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipoOperacao"
        android:text="TIPO DA OPERAÇÃO"
        android:textSize="32sp"
        android:layout_margin="5dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número da Conta Origem"
        android:textSize="24sp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/numeroContaOrigem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="number"
        android:fontFamily="sans-serif-light"
        android:hint="Digite o número da conta"
        android:minHeight="48dp"
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelContaDestino"
        android:text="Número da Conta Destino"
        android:textSize="24sp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/numeroContaDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="number"
        android:fontFamily="sans-serif-light"
        android:hint="Digite o número da conta"
        android:minHeight="48dp"
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor"
        android:textSize="24sp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="numberDecimal"
        android:fontFamily="sans-serif-light"
        android:hint="Digite o valor a ser "
        android:minHeight="48dp"
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnOperacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Realizar Operação"/>

</LinearLayout>